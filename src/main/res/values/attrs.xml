<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MRecyclerView">
        <attr name="mode">
            <flag name="list" value="1" />
            <flag name="grid" value="2" />
            <flag name="stagger" value="3" />
        </attr>
        <attr name="orientation">
            <flag name="horizontal" value="0" />
            <flag name="vertical" value="1" />
        </attr>
        <attr name="dividerColor" format="color" />
        <attr name="dividerHeight" format="dimension" />
        <attr name="dividerOffsetStart" format="integer" />
        <attr name="dividerOffsetEnd" format="integer" />
        <attr name="numColumns" format="integer" />
        <attr name="emptyId" format="reference" />
        <attr name="pullRefresh" format="boolean" />
        <attr name="pullLoad" format="boolean" />
        <attr name="autoLoadOffset" format="integer" />
        <attr name="refreshHeader">
            <flag name="progress" value="1" />
            <flag name="blank" value="2" />
        </attr>
        <attr name="loadFooter">
            <flag name="progress" value="1" />
            <flag name="blank" value="2" />
        </attr>
        <attr name="maxHeight" format="dimension" />
        <attr name="maxWidth" format="dimension" />
    </declare-styleable>

</resources>